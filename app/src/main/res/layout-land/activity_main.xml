<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewResultado"
        android:layout_width="427dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="70dp"
        android:background="#D6F9FD"
        android:gravity="center_vertical"
        android:text="0"
        android:textAlignment="center"
        android:textColor="#25AAB6"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.587"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/IntroducirNum1"
        android:layout_width="425dp"
        android:layout_height="66dp"
        android:ems="10"
        android:hint="Introduce un número"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/textViewResultado"
        tools:layout_editor_absoluteY="102dp" />

    <EditText
        android:id="@+id/IntroducirNum2"
        android:layout_width="425dp"
        android:layout_height="60dp"
        android:ems="10"
        android:hint="Introduce otro número"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/IntroducirNum1"
        app:layout_constraintVertical_bias="0.038" />

    <Button
        android:id="@+id/button"
        android:layout_width="178dp"
        android:layout_height="44dp"
        android:layout_marginTop="60dp"
        android:backgroundTint="#009688"
        android:text="Sumar"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/IntroducirNum2" />

    <Button
        android:id="@+id/button2"
        android:layout_width="178dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#009688"
        android:text="Restar"
        app:layout_constraintEnd_toEndOf="@+id/IntroducirNum2"
        app:layout_constraintTop_toBottomOf="@+id/IntroducirNum2" />

    <Button
        android:id="@+id/button3"
        android:layout_width="177dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#009688"
        android:text="Multiplicar"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="174dp"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="#009688"
        android:text="Dividir"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <Button
        android:id="@+id/button5"
        android:layout_width="380dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#FF0404"
        android:text="@string/reset"
        app:layout_constraintEnd_toEndOf="@+id/IntroducirNum2"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/IntroducirNum2"
        app:layout_constraintTop_toBottomOf="@+id/IntroducirNum2" />

</androidx.constraintlayout.widget.ConstraintLayout>